        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DepositMoneyServlet</servlet-name>
        <servlet-class>controller.DepositMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepositMoneyServlet</servlet-name>
        <url-pattern>/Deposit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>WithdrawMoneyServlet</servlet-name>
        <servlet-class>controller.WithdrawMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WithdrawMoneyServlet</servlet-name>
        <url-pattern>/Withdraw</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewSummaryServlet</servlet-name>
        <servlet-class>controller.ViewSummaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewSummaryServlet</servlet-name>
        <url-pattern>/Summary</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewAccountServlet</servlet-name>
        <servlet-class>controller.NewAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewAccountServlet</servlet-name>
        <url-pattern>/NewAccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransferMoneyServlet</servlet-name>
        <servlet-class>controller.TransferMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferMoneyServlet</servlet-name>
        <url-pattern>/Transfer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <servlet-class>controller.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <url-pattern>/DeleteAccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HistoryServlet</servlet-name>
        <servlet-class>controller.HistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HistoryServlet</servlet-name>
        <url-pattern>/History</url-pattern>
    </servlet-mapping>

</web-app>